{
    "name": "@codemucker/ts-logging",
    "description": "A simple logging library which can be used in the browser, in node, in deno. Logging simple defers to the console",
    "license":"MIT",
    "version": "0.1.0",
    "authors": [
        "Bert van Brakel"
    ],
    "keywords": [
        "typescript",
        "logging"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:codemucker/codemucker-ts-logging.git"
    },
    "private": false,
    "type": "module",
    "main": "build/js/src/index.js",
    "types": "build/js/src/index.d.ts",
    "scripts": {
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "postversion": "git push && git push --tags",
        "version": "npm run format && git add -A src",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "clean": "rm -fR build && rm -fR node_modules/",
        "build": "tsc",
        "build-watch": "tsc --watch",
        "test_jest": "npm run build && npx jest",
        "test": "npm run build && node build/js/test/test.js",
        "test-watch": "watch 'npm run test' ./src/ ./test/"
    },
    "dependencies": {},
    "devDependencies": {
        "@babel/core": "^7.10.2",
        "@babel/preset-env": "^7.10.2",
        "@types/jest": "^26.0.0",
        "@types/node": "^14.0.13",
        "@typescript-eslint/eslint-plugin": "^2.33.0",
        "@typescript-eslint/parser": "^2.33.0",
        "babel-jest": "^26.0.1",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "jest": "^26.0.1",
        "jsdoc": "^3.6.4",
        "npm-dts": "^1.3.1",
        "prettier": "^2.0.5",
        "ts-jest": "^26.1.0",
        "typescript": "~3.9.3"
    }
}
