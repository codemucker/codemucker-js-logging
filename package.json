{
  "name": "@codemucker/logging",
  "description": "A simple console logging library which can be used in the browser, in node, in deno.",
  "license": "MIT",
  "version": "0.1.1",
  "authors": [
    "Bert van Brakel"
  ],
  "keywords": [
    "typescript",
    "logging"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:codemucker/codemucker-js-logging.git"
  },
  "private": false,
  "main": "build/js/src/index.js",
  "types": "build/js/src/index.d.ts",
  "scripts": {
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm test && pnpm dlx run lint",
    "preversion": "pnpm dlx run lint",
    "postversion": "git push && git push --tags",
    "release": "pnpm dlx publish --access private",
    "pre-commit": "pnpm dlx run format && pnpm dlx run lint && pnpm dlx run test",
    "version": "pnpm dlx run format && git add -A src",
    "format": "pnpm dlx prettier --write .",
    "lint": "pnpm dlx prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "clean": "rm -fR build/* && rm -fR node_modules/*",
    "build": "tsc",
    "build-watch": "tsc --watch",
    "test": "pnpm run build && pnpm dlx jest --verbose=true --detectOpenHandles --coverageDirectory build/jest-coverage",
    "test-watch": "watch 'pnpm run test' ./src/ ./test/"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "18.11.9",
    "jest": "^29.3.1",
    "prettier": "^2.7.1",
    "shared-git-hooks": "^1.2.1",
    "ts-jest": "^29.0.3",
    "ts-node":"10.9.1",
    "typescript": "^4.9.3"
  }
}
